<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal" android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="8dp">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/background_selector">
        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/thumb"
                android:layout_width="@dimen/casino_list_item_content_height"
                android:layout_height="@dimen/casino_list_item_content_height"
                android:layout_margin="10dp"/>

        <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="PALMS BET София Хаджи Димитър, София, кв. Хаджи Димитър, бул. Владимир Вазов 9"
                android:gravity="center_vertical"
                android:textSize="15sp"
                android:textColor="@drawable/list_item_text_selector"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="@dimen/activity_horizontal_margin"/>
    </LinearLayout>
</LinearLayout>